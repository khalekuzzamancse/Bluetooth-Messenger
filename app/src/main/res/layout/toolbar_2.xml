<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:id="@+id/customToolbarItemLayout"
        >

    <TextView
        android:textColor="@color/white"
        android:id="@+id/ChatActivity_UserNmae"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/user_name"
        app:layout_constraintEnd_toStartOf="@+id/ChatActivity_Listen"
        app:layout_constraintTop_toTopOf="@+id/ChatActivity_Listen" />

    <TextView
            android:id="@+id/ChatActivity_Status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/status"
        android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@+id/ChatActivity_UserNmae"
            app:layout_constraintTop_toBottomOf="@+id/ChatActivity_UserNmae" />

        <Button
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:id="@+id/ChatActivity_Listen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:text="@string/listen"
            android:textColor="@color/white"
            android:textAllCaps="false"
            app:layout_constraintEnd_toStartOf="@+id/ChatActivity_PairedDevice"
            app:layout_constraintTop_toTopOf="@+id/ChatActivity_PairedDevice" />

        <Button
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:id="@+id/ChatActivity_PairedDevice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:textAllCaps="false"
            android:text="@string/device"
            android:textColor="@color/white"
            android:drawableStart="@drawable/ic_connected"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

